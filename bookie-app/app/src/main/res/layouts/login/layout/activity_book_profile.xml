<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.book_profile.BookProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/book_card_container"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:background="#FFFAFA"
            android:divider="@android:color/transparent"
            app:cardBackgroundColor="#F0FFFF"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_constraint"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/book_image"
                    android:layout_width="127dp"
                    android:layout_height="132dp"
                    android:contentDescription="Book cover image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.058" />

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="The Fellowship of the Ring"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/book_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/book_author"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:text="JRR Tolkien"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/book_image"
                    app:layout_constraintTop_toBottomOf="@+id/book_title" />

                <!--Rating bar only for visualization, user cant interact with it.-->

                <TextView
                    android:id="@+id/book_categories"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="136dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:text="Adventure, Action"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating_bar" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:scaleX="1.60"
                    android:scaleY="1.60"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/book_image"
                    app:layout_constraintTop_toBottomOf="@+id/book_author"
                    app:layout_constraintVertical_bias="0.209" />

                <TextView
                    android:id="@+id/reviews_quantity"
                    android:layout_width="58dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="28dp"
                    android:ellipsize="end"
                    android:text="(300)"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/rating_bar"
                    app:layout_constraintTop_toBottomOf="@+id/book_author" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/review_container"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:background="#FFFAFA"
                android:divider="@android:color/transparent"
                app:cardBackgroundColor="#F0FFFF"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/review_constrain"
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/review_text"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:ems="20"
                        android:gravity="start|top"
                        android:hint="@string/write_review"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RatingBar
                        android:id="@+id/review_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.60"
                        android:scaleY="0.60"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/review_text" />

                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/submit_review"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/review_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>