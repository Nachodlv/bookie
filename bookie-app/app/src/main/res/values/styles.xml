<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/whitesmoke</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomToolbarDark" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomCardView" parent="Theme.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/starYellow</item>
    </style>

    <style name="OnTopOfSecondary" parent="android:Widget.TextView">
        <item name="android:color">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <!--Hamburger styles-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
